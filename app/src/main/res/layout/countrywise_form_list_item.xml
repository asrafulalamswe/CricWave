<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="standings"
            type="com.mdasrafulalam.cricwave.model.standings.AllStandings" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/teamImageStatIV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            app:setImageById="@{standings.team_id}"
            tools:src="@drawable/day_mode"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/teamStatNameIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            tools:text="SYT"
            app:setNameCodeById="@{standings.team_id}"
            android:textSize="@dimen/sp14"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            app:setSeasonNameById="@{standings.season_id}"
            tools:text="Seasons"
            android:textSize="@dimen/sp14"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/teamStatPositionIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{String.valueOf(standings.position)}"
            tools:text="5"
            android:textSize="@dimen/sp14"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/teamStatWonIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{String.valueOf(standings.won)}"
            tools:text="5"
            android:textSize="@dimen/sp14"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/teamStatLostIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="5"
            android:text="@{String.valueOf(standings.lost)}"
            android:textSize="@dimen/sp14"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/teamStatNrrIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="5"
            android:text="@{String.valueOf(standings.netto_run_rate)}"
            android:textSize="@dimen/sp12"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/teamStatFormIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@{String.valueOf(standings.recent_form)}"
            tools:text="W W L L D"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black"/>
    </LinearLayout>
</layout>