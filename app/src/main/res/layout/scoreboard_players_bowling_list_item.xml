<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bowlingScore"
            type="com.mdasrafulalam.cricwave.model.fixtureswithbowlingscore.Bowling" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="15"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bowlerName"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:textSize="@dimen/sp20"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            app:setPlayerNameById="@{bowlingScore.player_id}"
            tools:text="Bowler"/>
        <TextView
            android:id="@+id/bowlerOvers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            android:layout_weight="1"
            android:text="@{String.valueOf(bowlingScore.overs)}"
            tools:text="O"/>
        <TextView
            android:id="@+id/bowlerMaidenOvers"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:text="@{String.valueOf(bowlingScore.medians)}"
            tools:text="M"/>
        <TextView
            android:id="@+id/bowlerTotalRunConceived"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:text="@{String.valueOf(bowlingScore.runs)}"
            tools:text="R"/>
        <TextView
            android:id="@+id/bowlerTotalWickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:layout_weight="1"
            android:text="@{String.valueOf(bowlingScore.wickets)}"
            tools:text="W"/>
        <TextView
            android:id="@+id/bowlerEcoRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:layout_weight="1"
            android:text="@{String.valueOf(bowlingScore.rate)}"
            tools:text="ECON"/>
        <TextView
            android:id="@+id/bowlerWideBalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:layout_weight="1"
            android:text="@{String.valueOf(bowlingScore.wide)}"
            tools:text="WD"/>
        <TextView
            android:id="@+id/bowlerNoBalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:layout_weight="1"
            android:text="@{String.valueOf(bowlingScore.noball)}"
            tools:text="NB"/>

    </LinearLayout>
</layout>