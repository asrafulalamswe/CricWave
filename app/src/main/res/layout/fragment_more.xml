<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:orientation="vertical"
            android:gravity="center_vertical"
            tools:context=".ui.MoreFragment">
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_tab_text"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/more_search_box"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp20"
                        android:paddingTop="@dimen/dp_10"
                        android:textColorHint="@color/black"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/search"
                        android:padding="@dimen/dp_10"
                        android:hint="@string/search_hint"
                        android:inputType="text"
                        android:autofillHints="name" />
                    <ImageView
                        android:id="@+id/playerVoiceSearchIV"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:src="@drawable/voice_search2"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/moreFragmentPlayersRV"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2"
               android:orientation="vertical">
               <androidx.cardview.widget.CardView
                   android:id="@+id/statisticsMoreCV"
                   android:layout_marginBottom="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_10"
                   app:cardCornerRadius="@dimen/dp_10"
                   app:cardElevation="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@color/light_green"
                       android:padding="@dimen/dp_10"
                       android:orientation="horizontal"
                       tools:ignore="UseCompoundDrawables">
                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/statistics"
                           tools:ignore="ContentDescription" />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textSize="30sp"
                           android:layout_marginStart="@dimen/dp_10"
                           android:textColor="@color/color_trail_text"
                           android:text="@string/statistics"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/leaguesMoreCV"
                   android:layout_marginBottom="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_10"
                   app:cardCornerRadius="@dimen/dp_10"
                   app:cardElevation="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@color/light_green"
                       android:padding="@dimen/dp_10"
                       android:orientation="horizontal"
                       tools:ignore="UseCompoundDrawables">
                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/league"
                           tools:ignore="ContentDescription" />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textSize="30sp"
                           android:layout_marginStart="@dimen/dp_10"
                           android:textColor="@color/color_trail_text"
                           android:text="@string/popular_t20_leagues"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
           </LinearLayout>
        </LinearLayout>
</layout>