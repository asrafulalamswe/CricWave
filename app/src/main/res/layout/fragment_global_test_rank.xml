<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.GlobalTestRankFragment">

        <LinearLayout
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/testMenRankingTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/men"
                android:fontFamily="@font/amarante"
                android:gravity="center"
                android:textColor="@color/color_author"
                android:textSize="30sp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#DBECFF"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/ranking_markings"
                android:layout_weight="0.5"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/country"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/match_played"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/points"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/rating"
                android:textSize="20sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/testloadingTV"
            android:src="@drawable/loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/globalTestRankRV"
            android:layout_margin="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>