<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="playerInfo"
            type="com.mdasrafulalam.cricwave.model.players.Data" />
    </data>

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PlayerDetailsFragment">
        <LinearLayout
            android:id="@+id/topLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="25dp"
                app:cardElevation="@dimen/dp_10"
                app:cardBackgroundColor="#CEFBD0"
                app:contentPadding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/detailsPlayerImageIV"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_bg"
                        android:padding="8dp"
                        android:layout_alignParentEnd="true"
                        app:setImageResources="@{playerInfo.image_path}"
                        tools:src="@drawable/international"/>
                    <TextView
                        android:id="@+id/detailsPlayerNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:scrollHorizontally="false"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:layout_toStartOf="@id/detailsPlayerImageIV"
                        android:text="@{playerInfo.fullname}"
                        tools:text="Rohit Sharma"
                        android:layout_marginStart="20dp"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/detailsPlayerCountryTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:setCountryNameById="@{playerInfo.country_id}"
                        tools:text="India"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/detailsPlayerNameTV"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailsPlayerSeparationTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/separator"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/detailsPlayerCountryTV"
                        android:layout_below="@+id/detailsPlayerNameTV"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailsPlayerPositionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Batter"
                        app:setPlayerPositionById="@{playerInfo.position.id}"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/detailsPlayerSeparationTV"
                        android:layout_below="@+id/detailsPlayerNameTV"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailsPlayerTotalRunsTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Total Runs: 20000"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/detailsPlayerPositionTV"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailsPlayerTotalWicketsTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Total Runs: 20000"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/detailsPlayerTotalRunsTV"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailsPlayerAchievementTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/achievements"
                        android:background="#E8F5E9"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/detailsPlayerTotalWicketsTV"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:drawableRightCompat="@drawable/expand" />
                    <TextView
                        android:id="@+id/detailsPlayerTotalMOTMTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Total MOTM"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/detailsPlayerAchievementTV"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailsPlayerTotalMOTSTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Total MOTM"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/detailsPlayerTotalMOTMTV"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/topLL"
            android:orientation="vertical">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/playerDetailsTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:minWidth="40dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="fill"
                app:tabIconTint="@color/grey"
                app:tabIndicatorColor="#08910E"
                app:tabMode="scrollable"
                app:tabPadding="15dp"
                app:tabSelectedTextColor="@color/tab_selected_text"
                app:tabTextColor="@color/grey" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/playersDetailsViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
</layout>