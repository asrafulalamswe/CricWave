<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="teamRanking"
            type="com.mdasrafulalam.cricwave.model.teamrankings.Team" />
    </data>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/serialTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@{String.valueOf(teamRanking.ranking.position)}"
                tools:text="@string/ranking_markings"
                android:layout_weight="0.5"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/rankingTeamImageIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/black"
                app:setImageResources="@{teamRanking.image_path}"
                tools:text="@string/image"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:text="@{teamRanking.name}"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_5"
                tools:text="@string/country"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@{String.valueOf(teamRanking.ranking.matches)}"
                android:layout_marginStart="@dimen/dp_5"
                tools:text="@string/match_played"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{String.valueOf(teamRanking.ranking.points)}"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_5"
                tools:text="@string/points"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@{String.valueOf(teamRanking.ranking.rating)}"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="end"
                tools:text="@string/rating"
                android:textSize="20sp"/>
        </LinearLayout>
</layout>